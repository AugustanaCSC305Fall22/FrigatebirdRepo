<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="572.0" prefWidth="619.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frigatebird.ui.EditorController">
   <right>
      <VBox alignment="TOP_CENTER" prefHeight="378.0" prefWidth="114.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" text="3D Preview" />
            <Button mnemonicParsing="false" text="Tile Tool" />
            <Button mnemonicParsing="false" onAction="#frontView" text="Height Tool" />
            <Button fx:id="menuButton" mnemonicParsing="false" onAction="#switchToMainMenu" text="Quit to Menu" />
         </children>
         <BorderPane.margin>
            <Insets right="5.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </right>
   <center>
      <Canvas fx:id="editingCanvas" height="500.0" width="500.0" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#initialize" text="New " />
                  <MenuItem mnemonicParsing="false" onAction="#loadFile" text="Load" />
                  <MenuItem mnemonicParsing="false" onAction="#save" text="Save" />
                  <MenuItem mnemonicParsing="false" onAction="#saveAs" text="Save As" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="View">
               <items>
                  <Menu mnemonicParsing="false" text="Preview">
                    <items>
                     <!--  <MenuItem mnemonicParsing="false" onAction="#switchToFrontView" text="Front View" /> -->
                        <MenuItem mnemonicParsing="false" onAction="#frontView" text="Front View" />
                    </items>
                  </Menu>
               </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
