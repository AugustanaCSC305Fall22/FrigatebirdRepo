<BorderPane fx:id="rootPane" prefHeight="572.0" prefWidth="619.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frigatebird.ui.EditorController">
   <right>
      <VBox alignment="TOP_CENTER" prefHeight="378.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <ToggleButton mnemonicParsing="false" onAction="#selectTool" text="Select Tool">
               <toggleGroup>
                  <ToggleGroup fx:id="toolButtonGroup" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton mnemonicParsing="false" onAction="#twoPointSelectTool" text="Two Point Select Tool" toggleGroup="$toolButtonGroup" />
            <HBox alignment="TOP_CENTER" prefHeight="0.0" prefWidth="200.0">
               <children>
                  <ToggleButton mnemonicParsing="false" onAction="#heightTool" text="Height Tool" toggleGroup="$toolButtonGroup">
                     <tooltip>
                        <Tooltip text="Does stuff" />
                     </tooltip>
                  </ToggleButton>
                  <TextField fx:id="heightNumTextField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="40.0" text="1">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="0.0" prefWidth="200.0">
               <children>
                  <Button fx:id="heightTileSelect" mnemonicParsing="false" onAction="#selectTilesAtHeight" prefHeight="25.0" prefWidth="127.0" text="Select Tiles at Height">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
                  <TextField fx:id="heightTileSelectInput" prefHeight="25.0" prefWidth="43.0">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="0.0" prefWidth="200.0">
               <children>
                  <ToggleButton fx:id="fillToolButton" mnemonicParsing="false" onAction="#fillTool" text="Fill Tool" />
                  <TextField fx:id="fillToolInput" prefHeight="25.0" prefWidth="75.0">
                     <HBox.margin>
                        <Insets left="12.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#pointyTiles" text="Pointy Tiles" />
            <Button mnemonicParsing="false" onAction="#randomizeTiles" text="Randomizer">
               <VBox.margin>
                  <Insets bottom="25.0" top="25.0" />
               </VBox.margin></Button>
            <HBox prefHeight="41.0" prefWidth="40.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#cutSelectedTiles" text="Cut" />
                  <Button mnemonicParsing="false" onAction="#copySelectedTiles" text="Copy">
                     <HBox.margin>
                        <Insets left="15.0" />
                     </HBox.margin>
                  </Button>
                  <ToggleButton mnemonicParsing="false" onAction="#pasteTool" text="Paste" toggleGroup="$toolButtonGroup">
                     <HBox.margin>
                        <Insets left="15.0" />
                     </HBox.margin>
                  </ToggleButton>
               </children>
               <VBox.margin>
                  <Insets left="25.0" />
               </VBox.margin>
            </HBox>
            <Button mnemonicParsing="false" onAction="#openPreviewPage" text="3D Preview" />
            <Button fx:id="menuButton" mnemonicParsing="false" onAction="#switchToMainMenu" text="Quit to Menu" />
         </children>
         <BorderPane.margin>
            <Insets right="5.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </right>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#newFile" text="New " />
                  <MenuItem mnemonicParsing="false" onAction="#loadFile" text="Load" />
                  <MenuItem mnemonicParsing="false" onAction="#save" text="Save" />
                  <MenuItem mnemonicParsing="false" onAction="#saveAs" text="Save As" />
                  <MenuItem mnemonicParsing="false" onAction="#terrainMapToObj" text="Export" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="View">
               <items>
                  <Menu mnemonicParsing="false" text="Preview">
                    <items>
                     <!--  <MenuItem mnemonicParsing="false" onAction="#switchToFrontView" text="Front View" /> -->
                        <MenuItem mnemonicParsing="false" onAction="#topDownView" text="Top Down View" />
                        <MenuItem mnemonicParsing="false" onAction="#sideView" text="Side View" />
                        <MenuItem mnemonicParsing="false" onAction="#openPreviewPage" text="3D View" />
                    </items>
                  </Menu>
               </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#switchToAboutScreen" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TabPane fx:id="canvasTabPane" prefHeight="547.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Untitled">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
